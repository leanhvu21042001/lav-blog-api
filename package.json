{
  "name": "lav-blog-api",
  "version": "1.0.0",
  "description": "LAV Blog API is web services restful apis for LAV blog UI",
  "main": "./bin/www",
  "author": "Le Anh Vu",
  "license": "ISC",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "precommit": "yarn lint:fix",
    "prepush": "yarn lint",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src && cp -r ./bin ./build",
    "build": "yarn clean && yarn build-babel",
    "production": "yarn build && NODE_ENV=production node ./build/bin/www",
    "dev": "nodemon --exec ./node_modules/.bin/babel-node ./bin/www",
    "knex": "./node_modules/.bin/babel-node -r dotenv/config node_modules/.bin/knex --knexfile ./src/db/knexfile.js",
    "unmigrate:development": "NODE_ENV=development yarn knex migrate:rollback",
    "unmigrate:production": "NODE_ENV=production yarn knex migrate:rollback",
    "unmigrate:testing": "NODE_ENV=testing yarn knex migrate:rollback",
    "seed:development": "NODE_ENV=development yarn knex seed:run",
    "seed:production": "NODE_ENV=production yarn knex seed:run",
    "seed:testing": "NODE_ENV=testing yarn knex seed:run",
    "migrate:development": "yarn unmigrate:development && NODE_ENV=development yarn knex migrate:latest && yarn seed:development",
    "migrate:production": "yarn unmigrate:production && NODE_ENV=production yarn knex migrate:latest && yarn seed:production",
    "migrate:testing": "yarn unmigrate:testing && NODE_ENV=testing yarn knex migrate:latest && yarn seed:testing",
    "migrate:all": "yarn migrate:development && yarn migrate:production && yarn migrate:testing",
    "migrate:make": "yarn knex migrate:make",
    "seed:make": "yarn knex seed:make",
    "lint": "eslint \"{src,test}/**/*{.js,.ts}\"",
    "lint:fix": "eslint \"{src,test}/**/*{.js,.ts}\" --fix"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "fast-glob": "^3.2.12",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "http-status": "^1.6.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "pg": "^8.9.0",
    "winston": "^3.8.2",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.21"
  }
}
