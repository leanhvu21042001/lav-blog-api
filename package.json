{
  "name": "api",
  "version": "1.0.0",
  "description": "LAV Blog API is web services restful apis for LAV blog UI",
  "main": "./bin/www",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "precommit": "yarn lint:fix",
    "prepush": "yarn lint",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src && cp -r ./bin ./build",
    "build": "yarn clean && yarn build-babel",
    "production": "yarn build && node ./build/bin/www  --env production",
    "dev": "nodemon --exec ./node_modules/.bin/babel-node ./bin/www",
    "knex": "./node_modules/.bin/babel-node -r dotenv/config node_modules/.bin/knex --knexfile ./src/db/knexfile.js",
    "unmigrate:development": "yarn knex migrate:rollback --env development",
    "unmigrate:production": "yarn knex migrate:rollback --env production",
    "unmigrate:testing": "yarn knex migrate:rollback --env testing",
    "seed:development": "yarn --env development knex seed:run",
    "seed:production": "yarn --env development knex seed:run",
    "seed:testing": "yarn --env development knex seed:run",
    "migrate:development": "yarn unmigrate:development && yarn knex migrate:latest --env development && yarn seed:development",
    "migrate:production": "yarn unmigrate:production && yarn knex migrate:latest --env development && yarn seed:production",
    "migrate:testing": "yarn unmigrate:testing && yarn knex migrate:latest --env development && yarn seed:testing",
    "migrate:all": "yarn migrate:development && yarn migrate:production && yarn migrate:testing",
    "lint": "eslint \"{src,test}/**/*{.js,.ts}\"",
    "lint:fix": "eslint \"{src,test}/**/*{.js,.ts}\" --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.21"
  }
}
